{
  "name": "爱淘",
  "version": "1.0",
  "manifest_version": 2,
  "description": "自动领取淘金币",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background":{
	"page":"bg.html"
  },
  "content_scripts":[
  {
    "js":["scripts/CS_getCoin.js"],
	"css":["css/msgbox.css"],
    "matches":["http://*/*","https://*/*"],
    "run_at":"document_end",
    "exclude_matches":["http://login.taobao.com/member/logout.jhtml*",
					   "https://login.taobao.com/member/login.jhtml*"]
  },
  {
    "js":["scripts/CS_Login.js"],
    "matches":["https://login.taobao.com/member/login.jhtml?ref=itao*"], 
    "run_at":"document_end"
  },
  {
    "js":["scripts/CS_Logout.js"],
    "matches":["http://login.taobao.com/member/logout.jhtml*"], 
    "run_at":"document_end"
  }],
  "web_accessible_resources":[
    "scripts/injected.js"
  ],
  "options_page": "options.html",
  "permissions": [
	"cookies", 
	"tabs",
	"http://*/*",
	"https://*/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
